<configuration>

    <property>
        <name>database.type</name>
        <value>mysql</value>
    </property>
    <property require-input="true">
        <name>mysql.host</name>
        <display-name>mysql host</display-name>
        <description>mysql 安装节点IP地址</description>
        <value/>
    </property>
    <property require-input="true">
        <name>mysql.root.password</name>
        <display-name>mysql root password</display-name>
        <value/>
        <property-type>PASSWORD</property-type>
        <description>mysql root 密码</description>
        <value-attributes>
            <type>password</type>
        </value-attributes>
    </property>
    <property>
        <name>mysql.port</name>
        <display-name>mysql 端口</display-name>
        <value>3306</value>
    </property>
    <property>
        <name>mysql.database</name>
        <value>azkaban</value>
        <description>azkaban 数据库，用来存储azkaban数据</description>
    </property>
    <property>
        <name>mysql.user</name>
        <value>azkaban</value>
        <description>azkaban 数据库用户</description>
    </property>
    <property require-input="true">
        <name>mysql.password</name>
        <display-name>mysql password</display-name>
        <value/>
        <property-type>PASSWORD</property-type>
        <description>azkaban 数据库用户密码</description>
        <value-attributes>
            <type>password</type>
        </value-attributes>
    </property>
    <property>
        <name>mysql.numconnections</name>
        <value>100</value>
    </property>

</configuration>
