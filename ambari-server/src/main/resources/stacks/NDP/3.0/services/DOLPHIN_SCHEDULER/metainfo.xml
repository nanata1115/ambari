<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>DOLPHINSCHEDULER</name>
            <displayName>DOLPHINSCHEDULER</displayName>
            <comment>DOLPHINSCHEDULER是开源的一个批量工作流任务调度器</comment>
            <version>3.1.2</version>
            <components>
                <component>
                    <name>DOLPHINSCHEDULER_MASTER</name>
                    <displayName>DOLPHINSCHEDULER_MASTER</displayName>
                    <category>MASTER</category>
                    <cardinality>1</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <commandScript>
                        <script>scripts/azkaban_web.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>1200</timeout>
                    </commandScript>
                </component>

                <component>
                    <name>DOLPHINSCHEDULER_WORKER</name>
                    <displayName>Azkaban Executor Server</displayName>
                    <category>SLAVE</category>
                    <cardinality>0+</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <commandScript>
                        <script>scripts/azkaban_executor.py</script>
                        <scriptType>PYTHON</scriptType>
                    </commandScript>
                </component>

            </components>

<!--            <configuration-dependencies>
                <config-type>azkaban-executor.properties.xml</config-type>
                <config-type>azkaban-users.xml</config-type>
                <config-type>azkaban-web.properties.xml</config-type>
                <config-type>log4j.properties.xml</config-type>
                <config-type>azkaban.properties.xml</config-type>
                <config-type>global.properties.xml</config-type>
            </configuration-dependencies>-->

            <quickLinksConfigurations>
                <quickLinksConfiguration>
                    <fileName>quicklinks.json</fileName>
                    <default>true</default>
                </quickLinksConfiguration>
            </quickLinksConfigurations>

        </service>
    </services>
</metainfo>
