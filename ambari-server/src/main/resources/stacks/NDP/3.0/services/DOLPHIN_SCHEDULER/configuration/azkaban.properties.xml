<configuration>

    <!--    # Azkaban Personalization Settings-->
    <property>
        <name>azkaban.name</name>
        <value>azkaban</value>
    </property>
    <property>
        <name>azkaban.label</name>
        <value>azkaban</value>
    </property>
    <property>
        <name>azkaban.color</name>
        <value>#FF3601</value>
    </property>
    <property>
        <name>default.timezone.id</name>
        <value>Asia/Shanghai</value>
    </property>
    <!--    # Velocity dev mode-->
    <property>
        <name>velocity.dev.mode</name>
        <value>false</value>
    </property>
    <!--    # Azkaban Jetty server properties.-->
    <property>
        <name>jetty.use.ssl</name>
        <value>false</value>
    </property>
    <property>
        <name>jetty.maxThreads</name>
        <value>25</value>
    </property>
    <property>
        <name>jetty.port</name>
        <value>10200</value>
    </property>
    <!--    # Where the Azkaban web server is located-->
    <!--    # mail settings-->
    <property>
        <name>mail.sender</name>
        <value>azkaban@email.com</value>
    </property>
    <property>
        <name>mail.host</name>
        <value>azkaban@email.com</value>
    </property>
    <property>
        <name>job.failure.email</name>
        <value>azkaban@email.com</value>
    </property>
    <property>
        <name>job.success.email</name>
        <value>azkaban@email.com</value>
    </property>
    <property>
        <name>lockdown.create.projects</name>
        <value>false</value>
    </property>
    <!--    # JMX stats-->
    <property>
        <name>jetty.connector.stats</name>
        <value>true</value>
    </property>
    <property>
        <name>executor.connector.stats</name>
        <value>true</value>
    </property>

</configuration>